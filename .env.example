# ── Backend ──────────────────────────────────────────────────────────────────
# Dev SQLite (default):
DATABASE_URL=sqlite:///./shopping.db
# Prod MySQL on Aiven (swap this in when deploying):
# DATABASE_URL=mysql+pymysql://user:pass@host:3306/dbname?charset=utf8mb4

# Groq — one key for both Whisper STT and Llama 3.1 LLM
GROQ_API_KEY=

# spaCy model — set to en_core_web_md if benchmark shows meaningful accuracy gain
SPACY_MODEL=en_core_web_sm

# NLP confidence threshold — below this value triggers Groq LLM fallback
NLP_CONFIDENCE_THRESHOLD=0.85

# Data directory (relative to backend/ working dir)
DATA_DIR=./data

# Allow Vite dev server + deployed frontend
CORS_ORIGINS=["http://localhost:5173"]

# ── Frontend ─────────────────────────────────────────────────────────────────
VITE_API_URL=http://localhost:8000
